@model MartialArts.Models.Student

@{
    ViewData["Title"] = "School Rank Change";
}

<h1>School Rank Change</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SchoolRankChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="InternalRankId" class="control-label"></label>
                <select asp-for="InternalRankId" class="form-control" asp-items="ViewBag.IRank"></select>
                <span asp-validation-for="InternalRankId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">Back to Student</a>
</div>

