@model MartialArts.Models.attendance_class

@{
    ViewData["Title"] = "Delete Class Attendance";
}

<h1>Delete Class Attendance</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>attendance_test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd class>
        <dt class = "col-sm-2">
            Class
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Class.Style.Name) @Enum.GetName(typeof(DayOfWeek), Model.Class.DayOfWeek), @Html.DisplayFor(model => model.Class.StartTime) - @Html.DisplayFor(model => model.Class.EndTime)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date.ToShortDateString())
            </dd>
    </dl>
    
    <form asp-action="DeleteAttendance">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
        <input type="hidden" asp-for="ClassId" value="@Model.ClassId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Events" asp-route-id="@Model.ClassId">Back to Event</a>
    </form>
</div>
