@model MartialArts.Models.attendance_test

@{
    ViewData["Title"] = "Delete Attendance";
}

<h1>Delete Attendance</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>attendance_test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.Title)
        </dd class>
    </dl>
    
    <form asp-action="DeleteAttendance">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
        <input type="hidden" asp-for="EventId" value="@Model.EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Events" asp-route-id="@Model.EventId">Back to Event</a>
    </form>
</div>
